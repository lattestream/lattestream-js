{
  "name": "@lattestream/server",
  "version": "1.0.0",
  "description": "LatteStream server SDK for Node.js and Deno",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "lattestream",
    "websocket",
    "realtime",
    "server",
    "nodejs",
    "deno",
    "pusher",
    "channels",
    "authentication"
  ],
  "author": "LatteStream",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lattestream/lattestream-js.git",
    "directory": "packages/server"
  },
  "bugs": {
    "url": "https://github.com/lattestream/lattestream-js/issues"
  },
  "homepage": "https://github.com/lattestream/lattestream-js#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
